<?xml version="1.0" encoding="utf-8"?>
<com.example.xiufengwang.myapplication.view.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/thumbnail_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/thumbnail_img"
        android:layout_alignRight="@+id/thumbnail_img"/>

</com.example.xiufengwang.myapplication.view.widget.SquareLayout>